@page
@model PyroSafe.Pages.User.WeeklyReportModel
@{
    ViewData["Title"] = "Звіт за тиждень";
}
<div class="form-wrapper">
    <h1 class="welcome-title">Звіт за останній тиждень</h1>
    <button type="button" class="btn-login" onclick="location.href='/User/Home'">На головну</button>

    <div class="form-container">
        @Html.AntiForgeryToken()

        <div class="entry-box">
            <label><strong>Оберіть зону:</strong></label>
            <select id="zoneSelect" onchange="loadZoneData()">
                <option value="">— Оберіть зону —</option>
            </select>

            <div id="zoneInfo" style="margin:20px 0; display:none;">
                <h3>Інформація про зону</h3>
                <p><strong>Назва:</strong> <span id="zoneName"></span></p>
                <p><strong>Поверх:</strong> <span id="zoneFloor"></span> • <strong>Площа:</strong> <span id="zoneArea"></span> м²</p>
                <h3>Сенсори в зоні (<span id="sensorsCount">0</span>):</h3>
                <div id="sensorsList"></div>
                <h3>Івенти за останній тиждень (<span id="eventsCount">0</span>):</h3>
                <div id="eventsList"></div>
            </div>

            <hr />
            <label><strong>Ваш коментар до звіту:</strong></label>
            <textarea id="reportComment" rows="6" placeholder="Напишіть висновки, рекомендації..."></textarea>

            <button id="generateReportBtn" class="btn-submit" style="margin-top:20px;">
                Створити звіт та надіслати на email
            </button>

            <p id="reportResult" style="margin:15px 0; min-height:24px; font-weight:bold;"></p>
        </div>
    </div>
</div>

<script>
    let currentZone = null;

    // === ФУНКЦІЯ ПОВІДОМЛЕНЬ (обов’язково має бути ДО кнопки!) ===
    function showMessage(text, type = 'info') {
        const el = document.getElementById('reportResult');
        el.innerText = text;
        el.style.color = type === 'success' ? '#00ffcc' :
                         type === 'error'   ? '#ff5555' :
                         type === 'warning' ? '#ffaa00' : '#ffffff';
    }

    // === Завантаження списку зон ===
    async function loadZones() {
        try {
            const res = await fetch('/api/zones');
            if (!res.ok) throw new Error('Не вдалося завантажити зони');
            const zones = await res.json();

            const select = document.getElementById('zoneSelect');
            select.innerHTML = '<option value="">— Оберіть зону —</option>'; // очищаємо

            zones.forEach(z => {
                const opt = document.createElement('option');
                opt.value = z.id;
                opt.textContent = `${z.zoneName} (Поверх ${z.floor})`;
                select.appendChild(opt);
            });
        } catch (err) {
            showMessage('Помилка завантаження зон: ' + err.message, 'error');
        }
    }

    // === Завантаження даних по зоні ===
    async function loadZoneData() {
        const zoneId = document.getElementById('zoneSelect').value;
        if (!zoneId) {
            document.getElementById('zoneInfo').style.display = 'none';
            currentZone = null;
            return;
        }

        try {
            const [zoneRes, sensorsRes, eventsRes] = await Promise.all([
                fetch(`/api/zones/${zoneId}`),
                fetch('/api/sensors'),
                fetch('/api/events')
            ]);

            if (!zoneRes.ok || !sensorsRes.ok || !eventsRes.ok) throw new Error('Помилка завантаження даних');

            const zone = await zoneRes.json();
            const allSensors = await sensorsRes.json();
            const allEvents = await eventsRes.json();

            currentZone = zone;

            const weekAgo = new Date();
            weekAgo.setDate(weekAgo.getDate() - 7);

            const zoneSensors = allSensors.filter(s => s.zoneID === zone.id);
            const zoneEvents = allEvents.filter(e =>
                zoneSensors.some(s => s.id === e.sensorID) &&
                new Date(e.createdAt) >= weekAgo
            );

            // Заповнення інформації
            document.getElementById('zoneName').textContent = zone.zoneName;
            document.getElementById('zoneFloor').textContent = zone.floor;
            document.getElementById('zoneArea').textContent = zone.area;
            document.getElementById('sensorsCount').textContent = zoneSensors.length;
            document.getElementById('eventsCount').textContent = zoneEvents.length;

            document.getElementById('sensorsList').innerHTML = zoneSensors.length === 0
                ? '<p style="color:#888;">Немає сенсорів</p>'
                : zoneSensors.map(s => `
                    <div style="background:rgba(0,191,255,0.1); padding:10px; margin:8px 0; border-radius:8px;">
                        <strong>${s.sensorName}</strong> (${s.sensorType}) — ${s.sensorValue}
                    </div>
                `).join('');

            document.getElementById('eventsList').innerHTML = zoneEvents.length === 0
                ? '<p style="color:#888;">Немає івентів за тиждень</p>'
                : zoneEvents.map(e => `
                    <div style="background:rgba(255,100,100,0.1); padding:12px; margin:10px 0; border-left:4px solid #ff5555; border-radius:8px;">
                        <strong>#${e.id}</strong> — ${e.sensorName || '—'} — <strong>${e.severity}</strong><br>
                        <small>${new Date(e.createdAt).toLocaleString()}</small><br>
                        ${e.description}
                        ${e.status === 'Resolved' ? ' <span style="color:#00ff00;">(Вирішено)</span>' : ''}
                    </div>
                `).join('');

            document.getElementById('zoneInfo').style.display = 'block';
        } catch (err) {
            showMessage('Помилка завантаження даних зони: ' + err.message, 'error');
        }
    }

    // === ГЕНЕРАЦІЯ ЗВІТУ ===
    document.getElementById('generateReportBtn').addEventListener('click', async () => {
        if (!currentZone) {
            return showMessage('Оберіть зону!', 'warning');
        }

        const comment = document.getElementById('reportComment').value.trim() || "Без коментарів";

        try {
            showMessage('Генеруємо звіт...', 'info');

            const res = await fetch('?handler=GenerateWeeklyReport', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ ZoneId: currentZone.id, Comment: comment })
            });

            if (!res.ok) {
                const errText = await res.text();
                throw new Error(errText || 'Помилка сервера');
            }

            const result = await res.json();

            if (result.success && result.download) {
                // Скачуємо файл
                const bytes = Uint8Array.from(atob(result.fileContentBase64), c => c.charCodeAt(0));
                const blob = new Blob([bytes], { type: 'text/plain;charset=utf-8' });
                const url = URL.createObjectURL(blob);

                const a = document.createElement('a');
                a.href = url;
                a.download = result.fileName;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);

                showMessage('Звіт скачано! Перевірте також пошту.', 'success');
            } else {
                showMessage(result.message || 'Щось пішло не так', 'error');
            }
        } catch (err) {
            console.error(err);
            showMessage('Помилка: ' + (err.message || 'Не вдалося створити звіт'), 'error');
        }
    });

    // === Запуск при завантаженні сторінки ===
    document.addEventListener('DOMContentLoaded', loadZones);
</script>
