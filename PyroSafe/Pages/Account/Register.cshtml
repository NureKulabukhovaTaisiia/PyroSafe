@page
@model PyroSafe.Pages.Account.RegisterModel
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Реєстрація";
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
    if (!string.IsNullOrEmpty(username))
    {
        Response.Redirect("/User/Home");
    }

}

<div class="form-wrapper">
    <h1 class="welcome-title">Вітаємо в PyroSafe</h1>

    <div class="form-container">
        <h2>Реєстрація</h2>

        <form id="registerForm">
            <label>Ім'я користувача:</label>
            <input type="text" id="username" required />

            <label>Email:</label>
            <input type="email" id="email" required />

            <label>Телефон:</label>
            <input type="text" id="phone" />

            <label>Пароль:</label>
            <input type="password" id="password" required />

            <button type="submit" class="btn-submit">Зареєструватися</button>
        </form>

        <button class="btn-login" onclick="location.href='/Account/Login'">Вже маєте акаунт? Увійти</button>

        <p id="result"></p>
    </div>
</div>

<script>
    document.getElementById('registerForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const data = {
            username: document.getElementById('username').value,
            email: document.getElementById('email').value,
            phone: document.getElementById('phone').value,
            password: document.getElementById('password').value,
            userRole: false
        };

        const response = await fetch('/api/users', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });

        if (response.ok) {
            document.getElementById('result').innerText = 'Реєстрація пройшла успішно!';
            document.getElementById('result').style.color = '#00bfff';
        } else {
            const err = await response.text();
            document.getElementById('result').innerText = 'Помилка: ' + err;
            document.getElementById('result').style.color = '#00bfff';
        }
    });
</script>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #0a0a0a, #0a1a2e);
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .form-wrapper {
        text-align: center;
    }

    .welcome-title {
        font-size: 36px;
        margin-bottom: 20px;
        color: #00bfff;
        font-weight: 700;
        text-shadow: 0 0 10px #00bfff;
    }

    .form-container {
        background-color: #0d0d0d;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 191, 255, 0.5);
        width: 400px;
        max-width: 90%;
        margin: 0 auto;
    }

    h2 {
        margin-bottom: 25px;
        color: #00bfff;
        font-weight: 700;
        letter-spacing: 1px;
    }

    label {
        display: block;
        margin-top: 15px;
        margin-bottom: 5px;
        font-weight: 600;
        color: #00bfff;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 12px;
        margin-bottom: 10px;
        border: 1px solid #00bfff;
        border-radius: 6px;
        background-color: #0a0a0a;
        color: #fff;
        font-size: 14px;
        transition: border 0.3s;
    }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus {
            border: 2px solid #00bfff;
            outline: none;
        }

    .btn-submit {
        width: 100%;
        padding: 12px;
        margin-top: 15px;
        background-color: #00bfff;
        color: #0a0a0a;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-submit:hover {
            background-color: #0099cc;
            transform: scale(1.02);
        }

    .btn-login {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        background-color: #0a0a0a;
        color: #00bfff;
        border: 2px solid #00bfff;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-login:hover {
            background-color: #00bfff;
            color: #0a0a0a;
        }

    #result {
        margin-top: 15px;
        font-weight: bold;
        text-align: center;
    }
</style>
